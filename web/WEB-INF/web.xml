<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>com.swp.koiCareSystem.controller.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PondController</servlet-name>
        <servlet-class>com.swp.koiCareSystem.controller.PondController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FishController</servlet-name>
        <servlet-class>com.swp.koiCareSystem.controller.FishController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FishInforController</servlet-name>
        <servlet-class>com.swp.koiCareSystem.controller.FishInforController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PondInforController</servlet-name>
        <servlet-class>com.swp.koiCareSystem.controller.PondInforController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PondController</servlet-name>
        <url-pattern>/PondController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FishController</servlet-name>
        <url-pattern>/FishController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FishInforController</servlet-name>
        <url-pattern>/FishInforController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PondInforController</servlet-name>
        <url-pattern>/PondInforController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>MainController</welcome-file>
    </welcome-file-list>
</web-app>
